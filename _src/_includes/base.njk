    <!-- Dark mode post footer -->
    <script>
        var state = document.getElementById("dm").value;

        if (currentTheme == "system") {
            document.getElementById("dm").value = "system";
        }

        if (currentTheme == "light") {
            document.getElementById("dm").value = "light";
        }

        if (currentTheme == "dark") {
            document.getElementById("dm").value = "dark";
        }

        function dm() {
            state = document.getElementById("dm").value;
            let theme = "light";
            if (state == "system") {
                setSystem();
                theme = "system";
            }
            if (state == "light") {
                setLight();
                theme = "light";
            }
            if (state == "dark") {
                setDark();
                theme = "dark";
            }
            localStorage.setItem("theme", theme);
        }
    </script>

    <!-- Open external links in a new tab -->
    <script>
        function openExtLinks() {
            for (var links = document.links, i = 0, a; a = links[i]; i++) {
                if (a.host !== location.host) {
                        a.target = '_blank';
                }
            }
        }
    </script>

