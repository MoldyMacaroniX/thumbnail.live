<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Sitemap -->
    <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml">

    <!-- Metadata -->
    <title>{{ title or metadata.title }} | Thumbnail.live</title>
    <meta name="title" content="{{ title or metadata.title }} | Thumbnail.live">
    <meta name="description" content="{{ desc or metadata.desc }}">

    <!-- Branding -->
    <meta name="theme-color" content="#FF0000">
    <link rel="icon" href="/assets/icon.png">

    <!-- CSS -->
    <link rel="stylesheet" href="/assets/index.css">
    {% if tool == "thumbnail" or tool == "feed" %}<link rel="stylesheet" href="/assets/thumbnail.css">{% endif %}
    {% if tool == "upNext" %}<link rel="stylesheet" href="/assets/up-next.css">{% endif %}
    {% if tool == "search" %}<link rel="stylesheet" href="/assets/search.css">{% endif %}
    {% if tool == "comment" %}<link rel="stylesheet" href="/assets/comment.css">{% endif %}
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

    <!-- Opengraph -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://www.thumbnail.live/">
    <meta property="og:title" content="{{ title or metadata.title }} | Thumbnail.live">
    <meta property="og:site_name" content="Thumbnail.live">
    <meta property="og:description" content="{{ desc or metadata.desc }}">
    <meta property="og:image" content="/assets/og.png">

    <!-- Twitter since they're different or something -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://www.thumbnail.live/">
    <meta property="twitter:title" content="{{ title or metadata.title }} | Thumbnail.live">
    <meta property="twitter:description" content="{{ desc or metadata.desc }}">
    <meta property="twitter:image" content="/assets/og.png">
</head>
<body class="preload">

    <!-- Dark mode pre footer -->
    <script>
        var currentTheme = localStorage.getItem("theme");
        {# var matched = window.matchMedia('(prefers-color-scheme: dark)').matches; #}

        if (currentTheme == "system") {
            setSystem();
        }

        if (currentTheme == "light") {
            setLight();
        }
        
        if (currentTheme == "dark") {
            setDark();
        }

        function setSystem() {
            document.body.classList.remove('dark');
            document.body.classList.remove('light');
        }
        
        function setDark() {
            document.body.classList.add('dark');
            document.body.classList.remove('light');
        }

        function setLight() {
            document.body.classList.add('light');
            document.body.classList.remove('dark');
        }
    </script>

    <div class="mobile" id="menu">
        <i class="ri-close-fill menu-close" id="close" onclick="closeMobile()" onkeydown="if (event.keyCode === 13) {closeMobile()}" tabindex="0"></i>
        <div style="display: flex; flex-direction: column; height: 100%; width: 100%;">
            <div class="mobile-padding">
                <a href="/" class="logo"><i class="ri-play-circle-fill"></i><span>Thumbnail.live</span></a>
            </div>
            <hr>
            <a href="/" class="mobile-link">Home</a>
            <a href="/up-next/" class="mobile-link">Up Next</a>
