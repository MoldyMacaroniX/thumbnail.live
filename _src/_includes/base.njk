                    {# <div class="tag"><span>Thumbnail View:</span></div> #}
                    <a href="/" class="item{% if page.url == "/" %} active{% endif %}">Home</a>
                    <a href="/up-next/" class="item{% if page.url == "/up-next/" %} active{% endif %}">Up Next</a>
                    <a href="/search/" class="item{% if page.url == "/search/" %} active{% endif %}">Search</a>
                    <a href="/feed/" class="item{% if page.url == "/feed/" %} active{% endif %}">In Feed</a>
                    <a href="/comment/" class="item{% if page.url == "/comment/" %} active{% endif %}">Comment</a>
                </div>
            </div>
            <div class="right">
